<div class:top_image>
<%= image_tag("top1.png", class:"kintai_top1")%>
</div>
<div class=login_design>
<h2>【新規登録】</h2>


  <%= render "devise/shared/error_messages", resource: resource %>

 <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name,autofocus: true, id:"user_name" %>
        </div>

  <div class="field">
    <%= f.label :email ,"メールアドレス"%><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password ,"パスワード"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class:foot_image>
<%= image_tag("foot2.png", class:"kintai_top2")%>
</div>